<div class="container">
  <h2><%=@restaurant.name%></h2>

  <%# display restaurant details %>

  <p>Address: <%=@restaurant.address%></p>
  <p>Phone number: <%=@restaurant.phone_number%></p>
  <p>Category: <%=@restaurant.category%></p>

  <%# create new review %>

  <%= link_to 'Review restaurant', new_restaurant_review_path(@restaurant), class: "btn btn-primary"%>

  <%# display all the reviews %>
  <ul class="list-group list-group-flush">
    <% @restaurant.reviews.each do |review|%>
    <li class="list-group-item">Rating: <%=review.rating%>: <%= review.content %></li>
    <%# <li>Rating: <%=review.rating Comment: <%=review.content</li> %>
    <% end %>
  </ul>

  <%= link_to 'Home', restaurants_path, class: "btn btn-primary"%>
</div>
